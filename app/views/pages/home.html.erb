<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "background" %>' );">
  <div class="banner-content">
    <h1>Go. Find the magic.</h1>
    <div class="container">
      </div>
        <%= simple_form_for :hunt, url: hunts_path, method: :get do |f| %>
          <div class="form-group row">
              <%= f.input :city, placeholder: "Enter a city", id: 'city', label: false %>

              <%= f.input :category, collection: @categories, prompt: "Pick a category", id: 'category', label: false %>

              <%= f.button :submit, "Find an Escape", class: "btn btn-primary btn-lg", id: 'search-btn' %>
          </div>
          </div>
        <% end %>
      </div>

  </div>
</div>
