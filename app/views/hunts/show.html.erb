<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <div class="side-menu">
        <div id="hunt-title-category">
          <h1><%= @hunt.name %></h1>
          </h3><%= @hunt.category.name %></h3>
        </div>
        <div id="hunt-description">
          <p> <%= @engine.description %> </p>
          <strong> <%= @engine.price %> â‚¬/per day </strong>
        </div>
        <div>
          <%= simple_form_for [@hunt] do |f| %>
