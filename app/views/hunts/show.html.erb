<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <div class="side-menu">
        <div id="hunt-title-category">
          <h1><%= @hunt.name %></h1>
          <h3 class="text-muted"><%= @hunt.category.name %></h3>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="map-test" style="width: 100%; height: 200px"></div>

<br>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= link_to "Back", :back,  class: "btn btn-success btn-lg margin-button" %>
    </div>
    <div class="col-xs-6 text-right">
      <%= simple_form_for :hunt, url: play_hunt_path(@hunt), method: :get do |f| %>
        <%= f.button :submit, "Let's Go !", class: "btn btn-success btn-lg margin-button"%>
      <% end %>

    </div>
  </div>
</div>

<% content_for(:after_js) do %>

<script>
  var directionsDisplay = new google.maps.DirectionsRenderer();
  var directionsService = new google.maps.DirectionsService();

  function calcRoute() {
    var origin      = new google.maps.LatLng(<%= @waypoints.first.lat_lng %>);
    var destination = new google.maps.LatLng(<%= @waypoints.last.lat_lng %>);

    var request = {
      origin: origin,
      destination: destination,
      <% if @waypoints.size > 2 %>
        waypoints: [
          <% @waypoints[1..-2].each do |waypoint| %>
            {
              location: new google.maps.LatLng(<%= waypoint.lat_lng %>),
              stopover: true
            },
          <% end %>
        ],
      <% end %>
      travelMode: google.maps.TravelMode.WALKING,
    };
    directionsService.route(request, function(response, status) {
      if (status == google.maps.DirectionsStatus.OK) {
        directionsDisplay.setDirections(response);
      }
    });
  }

  calcRoute(); // call this anywhere you want
  $(document).ready(function(){
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map-test' }}, function() {

      directionsDisplay.setMap(handler.getMap());
    });
  });


</script>

<% end %>
